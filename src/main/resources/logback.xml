<configuration>
    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set all loggers to INFO level by default -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Specific logger adjustments -->
    <logger name="io.netty.handler.ssl.BouncyCastlePemReader" level="INFO"/>
    <logger name="io.netty" level="INFO"/>

    <!-- Add any other specific loggers here if needed -->
    <!-- <logger name="com.yourpackage" level="WARN"/> -->
</configuration>